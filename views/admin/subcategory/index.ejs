<%- include("../layouts/header") %>
<%- include("../layouts/navbar") %>
<%- include("../layouts/sidebar") %>

<div class="app-wrapper">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="mb-0">Subcategories</h3>
      <a href="/admin/subcategories/create" class="btn btn-primary">Add Subcategory</a>
    </div>

    <% if (subcategories.length > 0) { %>
      <table class="table table-bordered table-striped bg-white">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Category</th>
            <th>Slug</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% subcategories.forEach((subcat, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= subcat.name %></td>
              <td><%= subcat.category?.name || 'N/A' %></td>
              <td><%= subcat.slug %></td>
              <td>
                <a href="/admin/subcategories/edit/<%= subcat._id %>" class="btn btn-sm btn-info">Edit</a>
                <form action="/admin/subcategories/delete/<%= subcat._id %>" method="POST" style="display:inline;">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No subcategories found.</p>
    <% } %>
  </div>
</div>

<%- include("../layouts/footer") %>
