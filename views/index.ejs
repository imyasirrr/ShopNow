<%- include('partials/header') %>

<!-- Hero Section -->
<div class="hero">
  <div class="container">
    <div class="row justify-content-between align-items-center">
      <div class="col-lg-6 col-md-6 text-center text-md-start">
        <div class="intro-excerpt">
          <h1>Modern Interior <span class="d-block">Design Studio</span></h1>
          <p class="mb-4">
            Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet
            velit. Aliquam vulputate velit imperdiet dolor tempor tristique.
          </p>
          <p>
            <a href="/shop" class="btn btn-secondary me-2">Shop Now</a>
            <a href="/shop" class="btn btn-white-outline">Explore</a>
          </p>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 text-center">
        <div class="">
          <img src="/images/couch.png" class="img-fluid" alt="Couch" />
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Hero Section -->

<!-- Product Section -->
<div class="product-section py-5">
  <div class="container">
    <div class="row">
      <!-- Dynamic Product Cards -->
     <% if (products && products.length > 0) { %>
  <% products.forEach(function(product) { %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <a class="product-item text-center d-block" href="/cart">
        <img src="/uploads/<%= product.image %>" class="img-fluid product-thumbnail mb-3" alt="<%= product.title %>" />
        <h3 class="product-title"><%= product.title %></h3>
        <strong class="product-price d-block mb-2">₹ <%= product.price %></strong>
        <span class="icon-cross">
          <img src="/images/cross.svg" class="img-fluid" alt="Add to Cart" />
        </span>
      </a>
    </div>
  <% }); %>
<% } else { %>
  <p>No products found.</p>
<% } %>

    </div>
  </div>
</div>
<!-- End Product Section -->

<!-- Why Choose Us Section -->
<div class="why-choose-section py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h2 class="section-title">Why Choose Us</h2>
        <p>Donec vitae odio quis nisl dapibus malesuada. Nullam ac aliquet velit. Aliquam vulputate velit imperdiet dolor.</p>
        <div class="row mt-4">
          <% const features = ['truck', 'bag', 'support', 'return']; %>
          <% features.forEach(f => { %>
          <div class="col-6 col-md-6 mb-3">
            <div class="feature d-flex align-items-start">
              <div class="icon me-3">
                <img src="/images/<%= f %>.svg" alt="<%= f %>" class="img-fluid" />
              </div>
              <div>
                <h4 class="mb-1 text-capitalize"><%= f.replace('-', ' ') %></h4>
                <p class="mb-0 small">Fast, secure and reliable service.</p>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <img src="/images/why-choose-us-img.jpg" alt="Why Choose Us" class="img-fluid rounded" />
      </div>
    </div>
  </div>
</div>

<!-- We Help Section -->
<div class="we-help-section py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-7 mb-4 mb-lg-0">
        <div class="imgs-grid d-flex gap-3">
          <img src="/images/img-grid-1.jpg" class="img-fluid rounded w-50" alt="" />
          <img src="/images/img-grid-2.jpg" class="img-fluid rounded w-50" alt="" />
