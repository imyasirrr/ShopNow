<%- include('partials/header') %>
<!-- Start Hero Section -->
<div class="hero">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-lg-5">
        <div class="intro-excerpt">
          <h1>Shop</h1>
        </div>
      </div>
      <div class="col-lg-7"></div>
    </div>
  </div>
</div>
<!-- End Hero Section -->



<div class="product-section py-5">
  <div class="container">
    <div class="row">
      <!-- Dynamic Product Cards -->
     <% if (products && products.length > 0) { %>
  <% products.forEach(function(product) { %>
    <div class="col-12 col-md-6 col-lg-3 mb-4">
      <a class="product-item text-center d-block" href="/cart">
        <img src="/uploads/<%= product.image %>" class="img-fluid product-thumbnail mb-3" alt="<%= product.title %>" />
        <h3 class="product-title"><%= product.title %></h3>
        <strong class="product-price d-block mb-2">â‚¹ <%= product.price %></strong>
        <span class="icon-cross">
          <img src="/images/cross.svg" class="img-fluid" alt="Add to Cart" />
        </span>
      </a>
    </div>
  <% }); %>
<% } else { %>
  <p>No products found.</p>
<% } %>

    </div>
  </div>
</div>
<%- include('partials/footer') %>
