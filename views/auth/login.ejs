<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Shop Now</title>
    <link rel="shortcut icon" href="/ShopNow.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Segoe UI", sans-serif;
        background-color: #f4f4f4;
        margin: 0;
      }
      .login-container {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
      }
      .login-form {
        background-color: #fff;
        padding: 60px 40px;
        width: 100%;
        max-width: 600px;
      }
      .login-form h1 {
        font-weight: 700;
      }
      .form-control {
        border-radius: 12px;
        background-color: #eef3ff;
      }
      .btn-login {
        background-color: #f4c84b;
        font-weight: 600;
        border: none;
        border-radius: 12px;
      }
      .btn-login:hover {
        background-color: #ddb633;
      }
      .separator {
        text-align: center;
        margin: 20px 0;
        color: #888;
        position: relative;
      }
      .separator::before,
      .separator::after {
        content: "";
        position: absolute;
        top: 50%;
        width: 45%;
        height: 1px;
        background: #ccc;
      }
      .separator::before {
        left: 0;
      }
      .separator::after {
        right: 0;
      }
      .login-image {
        background: url("/images/product-1.png") no-repeat center center;
        background-size: cover;
        flex: 1;
      }
      .logo-img {
        height: 60px;
        width: auto;
        object-fit: contain;
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <!-- Left: Form -->
      <div class="login-form d-flex flex-column justify-content-center">
        <img src="/images/ShopNow.png" alt="Shop Now" class="logo-img mb-4" />

        <h1 class="mb-3">Welcome back!</h1>
        <p class="mb-4 text-muted">
          Enter your credentials to access your account
        </p>

        <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/login" method="POST">
          <div class="mb-3">
            <label class="form-label">Email address</label>
            <input
              type="email"
              name="email"
              class="form-control"
              required
              placeholder="admin@gmail.com"
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Password</label>
            <div class="position-relative">
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                required
                placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              />
              <span
                class="position-absolute top-50 end-0 translate-middle-y pe-3"
                style="cursor: pointer"
                onclick="togglePassword()"
                >üëÅÔ∏è</span
              >
            </div>
          </div>

          <div class="mb-3 text-end">
            <a href="#" class="text-primary text-decoration-none"
              >Forgot password?</a
            >
          </div>

          <div class="mb-3 small text-muted">
            By signing in, you confirm that you agree to the
            <a href="#">Terms & Conditions</a> and
            <a href="#">Privacy Policy</a>.
          </div>

          <!-- ‚úÖ Login & Register Buttons -->
          <div class="d-grid mb-2">
            <button type="submit" class="btn btn-login py-2">Login</button>
          </div>

          <div class="d-grid mb-3">
            <a href="/register" class="btn btn-outline-primary py-2"
              >Register</a
            >
          </div>
        </form>
        <a class="text-end" href="/"> <...Back to Home</a>
      </div>

      <!-- Right: Image -->
      <div class="login-image d-none d-md-block"></div>
    </div>

    <script>
      function togglePassword() {
        const input = document.getElementById("password");
        input.type = input.type === "password" ? "text" : "password";
      }
    </script>
  </body>
</html>
